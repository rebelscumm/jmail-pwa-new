{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/favicon.ico",
      "/favicon.png",
      "/manifest.webmanifest",
      "/og.png",
      "/og.svg",
      "/icon-maskable.svg",
      "/robots.txt",
      "/sitemap.xml",
      "/assets/*",
      "/build/*.js",
      "/build/*.css",
      "/api/*"
    ]
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "routes": [
    {
      "route": "/api/diagnostics",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/google-me",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/google-login",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/google-callback",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/google/callback",
      "rewrite": "/api/google-callback",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/google-refresh",
      "methods": ["POST"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/google-tokeninfo",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/gmail/*",
      "methods": ["GET", "POST", "PATCH", "DELETE"],
      "allowedRoles": ["anonymous"]
    }
  ]
}


